<Window x:Class="CaliburnUpdatingScreen.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaliburnUpdatingScreen.Views"
        mc:Ignorable="d" Background="#292C33" WindowStyle="None"
        Title="Formatting Tool" Height="840" Width="800" MinHeight="840" MinWidth="700">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="18" Background="#292C33" Foreground="Gray">
            <MenuItem Header="File" Foreground="Gray">
                <MenuItem Header="Exit" x:Name="Exit" Background="#292C33" Foreground="Gray"/>
            </MenuItem>
            <MenuItem x:Name="btnComb" Header="Combining Text"/>
        </Menu>
        <Grid>
            <ContentControl x:Name="ActiveItem" Margin="5"/>
        </Grid>
    </DockPanel>
</Window> 